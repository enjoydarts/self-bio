---
import { siteConfig } from '../data/siteConfig';
---

<section class="mb-[50px]">
  <h2 class="text-lg font-semibold text-white mb-5">About</h2>
  <div class="text-[15px] leading-[1.7] text-gray-700 mb-5">
    {siteConfig.bio.ja.map((line, index) => (
      <Fragment>
        {line}
        {index < siteConfig.bio.ja.length - 1 && <br />}
      </Fragment>
    ))}
  </div>
  <div class="text-[15px] leading-[1.7] text-gray-600 italic">
    {siteConfig.bio.en.map((line, index) => (
      <Fragment>
        {line}
        {index < siteConfig.bio.en.length - 1 && <br />}
      </Fragment>
    ))}
  </div>
</section>
