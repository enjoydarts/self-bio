---
import { getEntry } from 'astro:content';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const profile = (await getEntry('profile', 'main'))!;

const { title = profile.data.title, description = profile.data.description } = Astro.props;

const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Person",
      "@id": `${profile.data.url}/#person`,
      "name": profile.data.name,
      "jobTitle": profile.data.subtitle,
      "description": profile.data.description,
      "url": profile.data.url,
      "image": {
        "@type": "ImageObject",
        "url": `${profile.data.url}/images/avatar.png`,
        "width": 400,
        "height": 400
      },
      "sameAs": [
        "https://github.com/enjoydarts",
        "https://x.com/enjoydarts",
        "https://threads.net/darts",
        "https://enjoydarts.blog"
      ],
      "knowsAbout": [
        "Ruby",
        "PHP",
        "TypeScript",
        "Web Development",
        "Full Stack Development",
        "Ruby on Rails",
        "Laravel",
        "React",
        "Vue.js",
        "Next.js",
        "Tailwind CSS"
      ],
      "hasOccupation": {
        "@type": "Occupation",
        "name": "Freelance Web Engineer",
        "occupationLocation": {
          "@type": "Country",
          "name": "Japan"
        }
      }
    },
    {
      "@type": "WebSite",
      "@id": `${profile.data.url}/#website`,
      "url": profile.data.url,
      "name": profile.data.title,
      "description": profile.data.description,
      "author": {
        "@id": `${profile.data.url}/#person`
      },
      "inLanguage": "ja-JP"
    }
  ]
};
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- OGP -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={`${profile.data.url}/og.png.png`} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@enjoydarts" />
    <meta name="twitter:creator" content="@enjoydarts" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${profile.data.url}/og.png.png`} />

    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png" />

    <!-- Twitter Widgets -->
    <script is:inline async src="https://platform.twitter.com/widgets.js" charset="utf-8" crossorigin="anonymous"></script>

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" is:inline set:html={JSON.stringify(structuredData)} />
  </head>
  <body>
    <slot />
  </body>
</html>
